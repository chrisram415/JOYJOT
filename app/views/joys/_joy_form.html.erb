<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
      <h4 class="text-center mb-4" id="inspireText" style="display: none;">What made you smile today?</h4>
      <%# html: { novalidate: true }: The novalidate attribute is added to the form tag to prevent HTML5 browser validation from conflicting
      with any custom validation or JavaScript we might use.  %>
      <%= simple_form_for @joy, html: { novalidate: true } do |f| %>
        <%= f.input :description, input_html: { placeholder: "Tell us your joy...", required: true }, label: false %>
        <%= f.input :rating, collection: (1..5).to_a, label: "How happy were you?", input_html: { data: { controller: "star-rating" }, required: true } %>
        <%#<%= f.button :submit, "Add your joy!", class: "btn btn-submit btn-block mt-3" %>
        <%#<%= f.button :submit, "Add your joy!", class: "btn btn-submit btn-block mt-3", "data-toggle": "modal", "data-target": "#myModal" %>
        <%= f.button :submit, "Add your joy!", class: "btn btn-submit btn-block mt-3", "data-toggle": "modal", "data-target": ".bd-example-modal-lg" %>
      <% end %>
    </div>
  </div>
</div>
