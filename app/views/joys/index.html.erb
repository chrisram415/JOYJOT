<div class="container">
  <div class="description mt-5">
    <h2>Your joys</h2>
  </div>

  <div class="home-grid mt-5 d-flex flex-wrap">
    <% if @joys.any? %>
      <% @joys.each do |joy| %>
        <a href="<%= joy_path(joy.id) %>" class="card-reco">
          <div class="card-reco-body">
            <h4 class="card-title">
              <%= joy.created_at.strftime('%Y-%m-%d') %>
            </h4>
            <br>
            <div class="card-text">
              <p class="responsive-truncate"><%= joy.description %></p>
              <% joy.rating.times do %>
                <i class="fas fa-star yellow-star"></i>
              <% end %>
            </div>
          </div>
        </a>
      <% end %>
    <% else %>
      <p>You haven't created any joys yet.</p>
    <% end %>
  </div>
</div>
