<div class="container">
  <%# new btn that scretly appears %>

  <%# <div class="description mt-5">
    <h2>Scrapbook</h2>
  </div> %>

  <div class="description mt-5" data-controller="fake-weekly-button">
    <h2 data-action="click->fake-weekly-button#hideButton">Scrapbook</h2>
    <a class="btn btn-reco d-none" href="/recommendations" data-fake-weekly-button-target="button">
      Happy Fri-Yay! Joy awaits: check your recs!
    </a>
  </div>
  <%# <div class="button-container" data-fake-weekly-button-target="button" data-action="click->fake-weekly-button#hideButton">
    <a class="btn btn-reco d-none" href="/recommendations">
      Happy Fri-Yay! Joy awaits: check your recs!
    </a>
  </div> %>


  <div class="d-flex justify-content-center">
    <div id="gamecard-carousel" class="carousel slide mt-3" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% if @gamecards.any? %>
          <% @gamecards.each_with_index do |gamecard, index| %>
            <div class="carousel-item <%= 'active' if index == 0 %>">
              <div class="card-carousel">
                <div class="card-text">
                  <img src="<%= gamecard.image_url %>" class="mobile-friendly-image">
                  <br>
                  <p><%= gamecard.joy.description %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="carousel-item active">
            <p class="text-center">You don't have any solved game cards yet</p>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#gamecard-carousel" role="button" data-bs-slide="prev"
        style="left: -30px;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>
      <a class="carousel-control-next" href="#gamecard-carousel" role="button" data-bs-slide="next"
        style="right: -30px;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>
    </div>
  </div>
</div>



