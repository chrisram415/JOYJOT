  <div class="description mt-5" data-controller="fake-weekly-button">
    <h2 data-action="click->fake-weekly-button#hideButton">Scrapbook</h2>
    <a class="btn btn-reco d-none" href="/recommendations" data-fake-weekly-button-target="button">
      Happy Fri-Yay! Joy awaits: check your recs!
    </a>
  </div>
  <%# <div class="button-container" data-fake-weekly-button-target="button" data-action="click->fake-weekly-button#hideButton">
    <a class="btn btn-reco d-none" href="/recommendations">
      Happy Fri-Yay! Joy awaits: check your recs!
    </a>
  </div> %>


  <div class="d-flex justify-content-center">
    <% if @games.any? %>
      <div class="grid-container">
        <% @games.each do |game| %>
          <div class="grid-item">
            <% carousel_id = "gamecard-carousel-#{game.id}" %>
            <div id="<%= carousel_id %>" class="carousel slide">
              <div class="carousel-inner">
                <% gamecards = game.gamecards.order(created_at: :desc) %>
                <% gamecards.each_with_index do |gamecard, index| %>
                  <div class="carousel-item <%= 'active' if index == 0 %>">
                    <div class="card-carousel">
                      <div class="card-text">
                        <img src="<%= gamecard.image_url %>" class="mobile-friendly-image">
                        <br>
                        <p><%= truncate(gamecard.joy.description, length: 50, omission: "...") %></p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              <a class="carousel-control-prev" href="#<%= carousel_id %>" role="button" data-bs-slide="prev" style="left: -4px;">
                <span class="carousel-control-prev-icon" aria-hidden="true" style="background-size: 50% 50%;"></span>
                <span class="visually-hidden">Previous</span>
              </a>
              <a class="carousel-control-next" href="#<%= carousel_id %>" role="button" data-bs-slide="next" style="right: -4px;">
                <span class="carousel-control-next-icon" aria-hidden="true" style="background-size: 50% 50%;"></span>
                <span class="visually-hidden">Next</span>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="carousel-item active">
        <p class="text-center">You don't have any solved game cards yet</p>
      </div>
    <% end %>
  </div>
</div>



