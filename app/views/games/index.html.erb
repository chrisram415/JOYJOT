<div class="container">
  <div class="description mt-5">
    <h2>New Games</h2>
  </div>

  <div class="home-grid mt-5 d-flex flex-wrap">
    <% if @games.any? %>
      <% number = 1 %>
      <% @games.each do |game| %>
        <a href="<%= game_path(game.id) %>" class="card-game">
          <div class="card-game-content">
            <h2 class="custom-h2">
              <img src="<%= image_path('game-icon') %>" class="med-icon">
              <span class="number"><%= number %></span>
              <img src="<%= image_path('game-icon') %>" class="med-icon">
            </h2>
            <p class="date"><%= game.updated_at.strftime('%Y-%m-%d') %></p>
          </div>
        </a>
        <% number += 1 %>
      <% end %>
    <% else %>
      <h4>None Available Right Now...</h4>
    <% end %>
  </div>
</div>
